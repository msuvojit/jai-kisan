<br><br>



<script>
    var users = {{{users}}};
    var uniqueCompanies = {{{uniqueCompanies}}};
    var uniqueUniversity = {{{uniqueUniversity}}};

$(document).ready(function() {
    $('#users-table').DataTable( {
    data: users,
    columns: [
        { "data": "id" },
        { "data": "firstName" },
        { "data": "lastName" },
        { "data": "email" },
        { "data": "gender" },
        { "data": "companyName" },
        { "data": "jobTitle" },
        { "data": "university" },
        { "data": "skill" }
    ]
    } );

    $('#company-table').DataTable( {
        data: uniqueCompanies,
        columns: [
            { "data": "companyName" }
        ]
    } );

    $('#university-table').DataTable( {
        data: uniqueUniversity,
        columns: [
            { "data": "university" }
        ]
    } );
} );

</script>